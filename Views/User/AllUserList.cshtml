@{
}



@model List<MarketPlaceApp.Models.User> 

<table class="table">
    <thead class="thead-dark">
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Name</th>
            <th scope="col">Email</th>
            <th scope="col">mobile</th>
            <th scope="col">Role</th>
            
        </tr>
    </thead>
    <tbody>
        @foreach(var user in Model)
        {
        <tr>    
            <th scope="row">@user.Id</th>
            <td>@user.Name</td>
            <td>@user.Email</td>
            <td>@user.mobile</td>
            <td>@user.Role</td>
            <td><a asp-action="ChangeRoleFunction" asp-controller="User" asp-route-id="@user.Id">Change Role</a></td>

        </tr>
        }
    </tbody>
</table>