@model MarketPlaceApp.Models.Product

<div class="container">

    <h1>Add New Product</h1>
    <form>
            
        <div class="form-group row">
            <label class="col-sm-2 col-form-label">Name</label>
            <div class="col-sm-10">
                <input asp-for="Name" type="text" class="form-control" id="productName" name="Name" value="">
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-2 col-form-label">Description</label>
            <div class="col-sm-10">
                <input asp-for="Description" type="text" class="form-control" id="productDescription" name="Description" value="">
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-2 col-form-label">Rating</label>
            <div class="col-sm-10">
                <input asp-for=Rating type="number" class="form-control" id="productRating" name="Rating" value="" min="1" max="5">
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-2 col-form-label">Price</label>
            <div class="col-sm-10">
                <input asp-for=price type="number" class="form-control" id="productPrice" name="Price" value="">
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-2 col-form-label">ImageUrl</label>
            <div class="col-sm-10">
                <input asp-for=ImageURL type="text" class="form-control" id="productImageURL" name="ImageURL" value="">
            </div>
        </div>

        <button asp-action="CreateProductMethod" asp-controller="Product" type="submit" class="btn btn-primary mb-2">Add New Product</button>
    </form>
</div>
