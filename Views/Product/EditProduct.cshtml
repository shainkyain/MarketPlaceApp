@model MarketPlaceApp.Models.Product

<div class="container">
    <h1>Edit Product</h1>
    <form method="post" asp-action="UpdateProduct" asp-controller="Product">
        <div class="form-group row">
            <label class="col-sm-2 col-form-label">ID</label>
            <div class="col-sm-10">
                <input type="text" readonly class="form-control-plaintext" id="staticId" value="@Model.Id">
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-2 col-form-label">Name</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="productName" name="Name" value="@Model.Name">
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-2 col-form-label">Description</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="productDescription" name="Description" value="@Model.Description">
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-2 col-form-label">Rating</label>
            <div class="col-sm-10">
                <input type="number" class="form-control" id="productRating" name="Rating" value="@Model.Rating" min="1" max="5">
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-2 col-form-label">Price</label>
            <div class="col-sm-10">
                <input type="number" class="form-control" id="productPrice" name="Price" value="@Model.price">
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-2 col-form-label">ImageUrl</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="productImageURL" name="ImageURL" value="@Model.ImageURL">
            </div>
        </div>

        <button asp-action="UpdateProduct" asp-controller="Product" asp-route-id="@Model.Id" type="submit" class="btn btn-primary mb-2">Update Product</button>
    </form>
</div>
